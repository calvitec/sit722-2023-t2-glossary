<!DOCTYPE html>
<html>
<head>
  <title>DevOps Glossary</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid black;
      padding: 8px;
    }

    th {
      text-align: left;
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <table>
    <tr>
      <th>ID</th>
      <th>Term</th>
      <th>Description</th>
      <th>Reference</th>
    </tr>
    <% glossary.forEach(term => { %>
    <tr>
      <td><%= term.id %></td>
      <td><%= term.term %></td>
      <td><%= term.description %></td>
      <td><%= term.reference %></td>
    </tr>
    <% }); %>
  </table>
</body>
</html>
